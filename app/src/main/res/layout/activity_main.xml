<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/treebackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kellyfennessy.applesfalling.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "#FFFFFF"
            android:textSize = "15dp"
            android:text = "Apples Clicked: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id ="@+id/clickedID"
            android:textSize = "15dp"
            android:textColor = "#FFFFFF"
            android:text = "0"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/resetButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "15dp"
            android:textColor = "#FFFFFF"
            android:text = "Dead Apples: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "#FFFFFF"
            android:textSize = "15dp"
            android:id ="@+id/applesDeadID"
            android:text = "0"/>
    </LinearLayout>

    <com.example.kellyfennessy.applesfalling.AnimatedView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/anim_view"  />
</LinearLayout>
